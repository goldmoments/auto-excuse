local dmsgsi = dmsgs.deathmessages

local player = game:GetService("Players").LocalPlayer

player.Character.Humanoid.Died:Connect(function()
local s1 = dmsgsi[math.random(1, #dmsgsi)]
local s2 = "All"
game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(s1, s2)
game:GetService("Players").LocalPlayer.Character.Humanoid.Died:Connect(function()
game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(dmsgsi[math.random(1, #dmsgsi)], All)
end)

player.CharacterAdded:Connect(function(Character)
Character:WaitForChild("Humanoid").Died:Connect(function()
local s1 = dmsgsi[math.random(1, #dmsgsi)]
local s2 = "All"
game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(s1, s2)
end)
game:GetService("Players").LocalPlayer.CharacterAdded:Connect(function(Character)
Character:WaitForChild("Humanoid").Died:Connect(function()
game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(dmsgsi[math.random(1, #dmsgsi)], All)
end)
end)
